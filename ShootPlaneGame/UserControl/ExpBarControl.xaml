<UserControl x:Class="ShootPlaneGame.UserControl.ExpBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShootPlaneGame.UserControl"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Border Background="Gray" CornerRadius="5">
            <Grid>
                <Rectangle x:Name="ExpFill" Fill="LimeGreen" RadiusX="5" RadiusY="5" />
                <TextBlock x:Name="ExpText"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
