<Window x:Class="ShootPlaneGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShootPlaneGame"
        mc:Ignorable="d"
        Title="飞机大战" Height="800" Width="480"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" SizeChanged="Window_SizeChanged" Background="Black">
    
    <Grid>
        <Canvas Name="GameCanvas">
            <!-- 玩家飞机 -->
            <Image x:Name="Player" Width="50" Height="50" Source="pack://application:,,,/Assets/selfplane.png"/>
        </Canvas>
        <TextBlock x:Name="FpsText"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="10"
                   Foreground="White"
                   FontSize="16"
                   Text="{Binding FPS, StringFormat=FPS：{0}}"/>

        <TextBlock FontSize="24"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,10,20,0"
                   Text="{Binding Score, StringFormat=得分：{0}}" />

        <TextBlock FontSize="24"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,50,20,0"
                   Text="{Binding Lives, StringFormat=生命：{0}}" />

        
        <Button Name="RestartButton"
                Content="重新开始"
                Width="150" Height="50"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="RestartButton_Click"
                FontSize="20"
                Background="Orange"
                Foreground="White"
                BorderBrush="DarkRed"
                BorderThickness="2" />
        
        <Grid Name="PauseMenu" Background="#AA000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <TextBlock Text="暂停菜单" FontSize="32" Foreground="White" HorizontalAlignment="Center" />
                <Button Content="继续游戏" Width="150" Height="40" FontSize="16"
                        Click="ResumeButton_Click" />
                <Button Content="重新开始" Width="150" Height="40" FontSize="16"
                        Click="RestartButton_Click" />
            </StackPanel>
        </Grid>
        
        <Rectangle x:Name="DamageOverlay"
                   Fill="Red"
                   Opacity="0"
                   Visibility="Collapsed"
                   Panel.ZIndex="99"
                   IsHitTestVisible="False" />

    </Grid>
</Window>
