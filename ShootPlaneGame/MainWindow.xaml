<Window x:Class="ShootPlaneGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShootPlaneGame"
        xmlns:userControl="clr-namespace:ShootPlaneGame.UserControl"
        mc:Ignorable="d"
        Title="飞机大战" Height="800" Width="480">
    
    <Grid>
        <userControl:GameView x:Name="GameView"
                  Background="Black">
            <userControl:GameView.Resources>
                <local:GameViewModel x:Key="GameViewModel"/>
            </userControl:GameView.Resources>
        </userControl:GameView>
    </Grid>
</Window>
